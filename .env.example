# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Stripe
# Use test keys in development, live keys in production
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Resend (Email)
RESEND_API_KEY=re_...
FROM_EMAIL=noreply@yourdomain.org
FROM_NAME=Blue Next Projet

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
# In production: NEXT_PUBLIC_APP_URL=https://yourdomain.vercel.app

# Admin
# The email address allowed to be the admin (first login sets up the account)
ADMIN_EMAIL=admin@yourdomain.org
